<!DOCTYPE html>
{{>header}}
<body> 
    {{>navbar}}     
<div class="main-content">
<div class="container">
    <div class="row">
    <div class="col s12 m8 offset-m2">
      
        <div class="card card-panel blue-grey darken-3">
        <div class="card-content white-text">
                   <h2 class="flow-text center">{{title}}</h2>
                   <p class="emailForPass">{{email}}</p>
            <form id="resetpass" action="/resetpass" method="post">               

                <div class="row">
                    <div class="input-field col s12">
                    <input id="password1" type="password" class="validate" required minlength="6">
                    <label for="password1">New password</label>
                    </div>
                </div>
               <div class="row">
                    <div class="input-field col s12">
                    <input id="password2" type="password" class="validate" required minlength="6">
                    <label for="password2">Repeat  new password</label>
                    </div>
                </div>
                <div class="base">
                    <div class="pass-match"><p>Passports do not match</p></div>
                </div>
                
                <button class="btn btn-center waves-effect waves-light" type="submit" name="action">Submit
                <i class="material-icons right">send</i>
                </button>       
            </form>
        </div>
        </div>
      </div>
    </div>
</div>
<script src="/js/resetpass.js"></script>
{{>footer}}
